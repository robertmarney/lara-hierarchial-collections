{
    "name": "robertmarney/lara-hierarchial-collections",
    "description": "Transforms flat collections to a nested hierarchy",
    "keywords": [
        "robertmarney",
        "laravel",
        "lara-hierarchy",
        "collections",
        "chart of accounts",
        "org chart"
    ],
    "homepage": "https://github.com/robertmarney/lara-hierarchial-collections",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Marney",
            "email": "rmarney@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2|^8.3|^8.4",
        "illuminate/collections": "^8.0||^9.0||^10.0||^11.0||^12.0",
        "illuminate/contracts": "^8.0||^9.0||^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.9||^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.0||^8.0||^9.0",
        "orchestra/testbench": "^10.0||^8.0||^9.0",
        "pestphp/pest": "^2.0||^3.0",
        "pestphp/pest-plugin-laravel": "^2.0||^3.0",
        "phpstan/extension-installer": "^1.1||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.0||^2.0",
        "phpstan/phpstan-phpunit": "^1.0||^2.0",
        "phpunit/phpunit": "^10.5||^11.5"
    },
    "autoload": {
        "psr-4": {
            "RCM\\LaraHierarchy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RCM\\LaraHierarchy\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "LaraHierarchy": "RCM\\LaraHierarchy\\Facades\\LaraHierarchy"
            },
            "providers": [
                "RCM\\LaraHierarchy\\HierarchicalServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
